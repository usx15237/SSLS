@model IEnumerable<SSLS.Domain.Concrete.Book>

@{
    ViewBag.Title = "Completed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="title">读者<b>@ViewBag.readerName</b>本次借阅成功!</h1> 
   <h3 style="text-align:center">借阅清单如下</h3>
<table  class="table table-striped table-condensed table-bordered">
    <thead>
        <tr>       
            <th class="text-center">书名</th>  
            <th class="text-center">类别</th>        
        </tr>
    </thead> 
    <tbody>
        @foreach (var line in Model)
        {
            <tr>
                <td class="text-center">@line.Name</td>
                <td class="text-center">@line.Category.Name</td>
            </tr>
        }
    </tbody>
</table>

<div style="text-align:center;margin-bottom:10px"> 
<b>借阅时间</b>
@ViewBag.BorrowTime
<b>应还时间</b>
@ViewBag.DateShouldBeReturn
    </div>

<div class="text-center">
    <a class="btn btn-primary" href="@ViewBag.ReturnUrl">继续借阅</a>
</div>


