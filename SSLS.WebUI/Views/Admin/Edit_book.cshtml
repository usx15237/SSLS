@model SSLS.Domain.Concrete.Book

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("input[name='file']").change(function () {
            var path = $(this).val();
            $("#ImageUrl").val(path);
        });
    });
</script>
<h2>编辑图书</h2>
@*using (Html.BeginForm())*@
@using (Html.BeginForm("Edit_book", "Admin", FormMethod.Post, new { enctype = "mutipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Status)
        @Html.HiddenFor(model => model.Code)

        <div class="form-group">
            <label class="control-label col-md-2" for="name">名称</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="CategoryId">作者</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.AUthors, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="CategoryId">分类</label>
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CategoryId, ViewBag.CategoryList as IEnumerable<SelectListItem>,
               new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="Name">价格</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2" for="Name">出版社</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Press, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Press, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Name">出版日期</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PublishDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PublishDate, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <label class="control-label col-md-2" for="Name">简介</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, 10, 60, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="ImageUrl">图片</label>
            <div class="col-md-2">
                @Html.EditorFor(model => model.ImageUrl, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.ImageUrl, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-8">
                <input type="file" name="file" class="form-control" />
            </div>
        </div>
    </div>

        <div class="panel-footer">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="保存" class="btn btn-default" />
                    @Html.ActionLink("返回列表", "Index_book")
                </div>
            </div>
        </div>

}


