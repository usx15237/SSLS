@model IEnumerable<SSLS.Domain.Concrete.Category>

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading"><h3>类别列表</h3></div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">编号</th>
                <th>名称</th>
                <th class="text-right"></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.Id</td>
                    <!-- path为"/Admin/Edit";query为"Id=1"-->
                    <td>@Html.ActionLink(item.Name, "Edit_category", new { item.Id })</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete_category", "Admin"))
                        {
                            @Html.Hidden("Id", item.Id)
                            <input type="submit" class="btn btn-default" value="删除">
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("新增", "Create_category", null, new { @class = "btn btn-default" })
    </div>
</div>

